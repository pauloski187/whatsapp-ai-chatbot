# Business identity shown in assistant system prompt.
BUSINESS_NAME=Your Business Name

# Assistant tone, e.g., "friendly and professional".
BOT_TONE=friendly and professional

# Groq API key used by LangChain ChatGroq.
GROQ_API_KEY=your_groq_api_key

# Groq model name. Keep default unless you intentionally change it.
GROQ_MODEL_NAME=llama-3.3-70b-versatile

# Twilio Account SID for WhatsApp messaging.
TWILIO_ACCOUNT_SID=your_twilio_account_sid

# Twilio Auth Token for API authentication.
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio sandbox or production WhatsApp sender number (e.g. whatsapp:+14155238886).
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Meta webhook verification token (must match app dashboard setting).
META_VERIFY_TOKEN=your_meta_verify_token

# Meta Page access token for Instagram messaging.
META_PAGE_ACCESS_TOKEN=your_meta_page_access_token

# Instagram account ID tied to your app messaging setup.
INSTAGRAM_ACCOUNT_ID=your_instagram_account_id

# Google Sheet ID used to store leads.
GOOGLE_SHEET_ID=your_google_sheet_id

# Path to your Google service account JSON key file.
GOOGLE_SERVICE_ACCOUNT_JSON=/absolute/path/to/service-account.json

# Chroma collection name for business knowledge chunks.
CHROMA_COLLECTION_NAME=business_knowledge
